<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expensemanger"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
       
        <activity
            android:name="com.example.expensemanger.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.expensemanger.AddActivity"
            android:label="@string/title_activity_add"
            android:parentActivityName="com.example.expensemanger.MainActivity" >
            <intent-filter>
                <action android:name="com.example.expensemanger.AddActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.expensemanger.DayActivity"
            android:label="@string/title_activity_day"
            android:parentActivityName="com.example.expensemanger.MainActivity" >
            <intent-filter>
                <action android:name="com.example.expensemanger.DayActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ViewActivity"
            android:label="@string/title_activity_view"  
            android:parentActivityName="com.example.expensemanger.MainActivity" >
            <intent-filter>
                <action android:name="com.example.expensemanger.ViewActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
   
        </application>

</manifest>
